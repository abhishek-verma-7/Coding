void triangle(int s){
        
    //Write your code here
    int count = s;
    for(int i = 0; i < s; i++){
        if(i == 0) {
            cout<<"*";
        }
        else if(i == s-1){
            count = s;
            while(count-- > 0){
                cout<<"* ";
            }
        }
        else{
            count = 2 * i;
            cout<<"*";
            while(count-- > 0){
                cout<<" ";
            }
            cout<<"*";
        }
        cout<<endl;
    }
}
